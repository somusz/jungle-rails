<%# category index page within admin page %>

<section class="admin-categories-index">

  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>

  <%# button for creating a new category %>
  <div class="well">
    <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>

  <%# listing out existing categories%>
  <div class="panel panel-default categories">
    <h2>Categories</h2>
    <ul class="category-list">
      <%= render @categories %>
    </ul>

  </div>

</section>
