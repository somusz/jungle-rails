<%# order receipt html for emails%>
<!DOCTYPE html>
<html>
  <head>
    <meta content='text/html; charset=UTF-8' http-equiv='Content-Type' />
  </head>
  <body>
    <h1>Hi Jungle Member!</h1>
    <p>
      You have successfully placed an order at Jungle.com.
      Your Order ID is: <%= @order.id %>.<br>
    </p>
    <h4>Your order:</h4>
    <div>
      <table>
        <thead>
          <tr>
            <th colspan="2">Product</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
          <% @order_total = 0 %>

          <% @order.line_items.each do |item| %>
            <%= render 'order_item', item: item %>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <th colspan="5">
              TOTAL:
            </th>
            <th>
              <%= humanized_money_with_symbol @order_total %>
            </th>
          </tr>
        </tfoot>
      </table>
    </div>
    </div>
    <p>Thanks for shopping at Jungle.com and have a great day!</p>
  </body>
</html>
